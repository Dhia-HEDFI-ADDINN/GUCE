{
  "realm": "e-guce-hub",
  "enabled": true,
  "displayName": "E-GUCE 3G Generator Hub",
  "displayNameHtml": "<div class=\"kc-logo-text\"><span>E-GUCE 3G Generator Hub</span></div>",
  "loginTheme": "keycloak",
  "sslRequired": "external",
  "registrationAllowed": false,
  "registrationEmailAsUsername": true,
  "rememberMe": true,
  "verifyEmail": true,
  "loginWithEmailAllowed": true,
  "duplicateEmailsAllowed": false,
  "resetPasswordAllowed": true,
  "editUsernameAllowed": false,
  "bruteForceProtected": true,
  "permanentLockout": false,
  "maxFailureWaitSeconds": 900,
  "minimumQuickLoginWaitSeconds": 60,
  "waitIncrementSeconds": 60,
  "quickLoginCheckMilliSeconds": 1000,
  "maxDeltaTimeSeconds": 43200,
  "failureFactor": 5,
  "roles": {
    "realm": [
      {
        "name": "SUPER_ADMIN",
        "description": "Acces total au Hub - Toutes les fonctionnalites"
      },
      {
        "name": "TENANT_MANAGER",
        "description": "Creer et gerer les instances GUCE (tenants)"
      },
      {
        "name": "MONITORING_VIEWER",
        "description": "Voir le monitoring et les metriques de toutes les instances"
      },
      {
        "name": "TEMPLATE_MANAGER",
        "description": "Gerer les templates de procedures, workflows, formulaires et regles"
      },
      {
        "name": "GENERATOR_OPERATOR",
        "description": "Operer le generateur de code et d'infrastructure"
      },
      {
        "name": "BILLING_MANAGER",
        "description": "Gerer la facturation et les abonnements"
      },
      {
        "name": "AUDIT_VIEWER",
        "description": "Consulter les logs d'audit"
      }
    ]
  },
  "groups": [
    {
      "name": "Administrators",
      "path": "/Administrators",
      "realmRoles": ["SUPER_ADMIN"]
    },
    {
      "name": "TenantManagers",
      "path": "/TenantManagers",
      "realmRoles": ["TENANT_MANAGER", "MONITORING_VIEWER"]
    },
    {
      "name": "TemplateManagers",
      "path": "/TemplateManagers",
      "realmRoles": ["TEMPLATE_MANAGER"]
    },
    {
      "name": "MonitoringTeam",
      "path": "/MonitoringTeam",
      "realmRoles": ["MONITORING_VIEWER"]
    },
    {
      "name": "BillingTeam",
      "path": "/BillingTeam",
      "realmRoles": ["BILLING_MANAGER"]
    }
  ],
  "clients": [
    {
      "clientId": "e-guce-hub",
      "name": "E-GUCE 3G Generator Hub",
      "description": "Interface unique du Hub - Acces a tous les modules (Tenant Builder, Generator Engine, Monitoring 360, Admin Central, Templates Library)",
      "enabled": true,
      "publicClient": true,
      "rootUrl": "https://e-guce-hub.com",
      "baseUrl": "/",
      "redirectUris": [
        "http://localhost:4200/*",
        "https://e-guce-hub.com/*"
      ],
      "webOrigins": [
        "http://localhost:4200",
        "https://e-guce-hub.com"
      ],
      "standardFlowEnabled": true,
      "directAccessGrantsEnabled": true,
      "protocol": "openid-connect",
      "defaultClientScopes": ["openid", "profile", "email", "roles"],
      "attributes": {
        "post.logout.redirect.uris": "http://localhost:4200/*##https://e-guce-hub.com/*"
      }
    },
    {
      "clientId": "hub-api",
      "name": "Hub API Backend",
      "description": "Client pour les APIs backend du Hub - Authentification service-to-service",
      "enabled": true,
      "publicClient": false,
      "secret": "hub-api-secret",
      "bearerOnly": true,
      "protocol": "openid-connect",
      "defaultClientScopes": ["openid", "profile", "email", "roles"]
    },
    {
      "clientId": "hub-instance-agent",
      "name": "Instance Agent",
      "description": "Client pour les agents des instances GUCE qui communiquent avec le Hub (monitoring, sync, updates)",
      "enabled": true,
      "publicClient": false,
      "secret": "instance-agent-secret",
      "serviceAccountsEnabled": true,
      "protocol": "openid-connect",
      "defaultClientScopes": ["openid", "profile", "email", "roles"]
    }
  ],
  "users": [
    {
      "username": "hub-admin",
      "email": "admin@e-guce-hub.com",
      "enabled": true,
      "emailVerified": true,
      "firstName": "Hub",
      "lastName": "Administrator",
      "credentials": [{ "type": "password", "value": "hubadmin", "temporary": true }],
      "realmRoles": ["SUPER_ADMIN"]
    },
    {
      "username": "tenant-manager",
      "email": "tenant-manager@e-guce-hub.com",
      "enabled": true,
      "emailVerified": true,
      "firstName": "Tenant",
      "lastName": "Manager",
      "credentials": [{ "type": "password", "value": "tenant123", "temporary": true }],
      "realmRoles": ["TENANT_MANAGER", "MONITORING_VIEWER"]
    },
    {
      "username": "template-manager",
      "email": "template-manager@e-guce-hub.com",
      "enabled": true,
      "emailVerified": true,
      "firstName": "Template",
      "lastName": "Manager",
      "credentials": [{ "type": "password", "value": "template123", "temporary": true }],
      "realmRoles": ["TEMPLATE_MANAGER"]
    },
    {
      "username": "monitoring-viewer",
      "email": "monitoring@e-guce-hub.com",
      "enabled": true,
      "emailVerified": true,
      "firstName": "Monitoring",
      "lastName": "Viewer",
      "credentials": [{ "type": "password", "value": "monitor123", "temporary": true }],
      "realmRoles": ["MONITORING_VIEWER"]
    }
  ],
  "clientScopes": [
    {
      "name": "hub-scope",
      "description": "Scope pour acceder aux fonctionnalites du Hub",
      "protocol": "openid-connect",
      "attributes": {
        "include.in.token.scope": "true"
      },
      "protocolMappers": [
        {
          "name": "hub-audience",
          "protocol": "openid-connect",
          "protocolMapper": "oidc-audience-mapper",
          "config": {
            "included.client.audience": "hub-api",
            "id.token.claim": "false",
            "access.token.claim": "true"
          }
        }
      ]
    }
  ]
}
