<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                            http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="004-create-hs-code-table" author="guce">
        <createTable tableName="ref_hs_code" schemaName="referential">
            <column name="id" type="uuid">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="code" type="varchar(12)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="chapter" type="varchar(2)"/>
            <column name="heading" type="varchar(4)"/>
            <column name="subheading" type="varchar(6)"/>
            <column name="tariff_line" type="varchar(12)"/>
            <column name="description_fr" type="text"/>
            <column name="description_en" type="text"/>
            <column name="duty_rate" type="decimal(10,4)"/>
            <column name="vat_rate" type="decimal(10,4)"/>
            <column name="excise_rate" type="decimal(10,4)"/>
            <column name="statistical_unit" type="varchar(50)"/>
            <column name="requires_license" type="boolean" defaultValueBoolean="false"/>
            <column name="requires_phytosanitary" type="boolean" defaultValueBoolean="false"/>
            <column name="requires_veterinary" type="boolean" defaultValueBoolean="false"/>
            <column name="is_prohibited" type="boolean" defaultValueBoolean="false"/>
            <column name="is_restricted" type="boolean" defaultValueBoolean="false"/>
            <column name="is_active" type="boolean" defaultValueBoolean="true"/>
            <column name="parent_id" type="uuid"/>
            <column name="tenant_id" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="timestamp">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="timestamp"/>
            <column name="created_by" type="varchar(255)"/>
            <column name="updated_by" type="varchar(255)"/>
            <column name="version" type="bigint" defaultValue="0"/>
            <column name="is_deleted" type="boolean" defaultValueBoolean="false"/>
            <column name="deleted_at" type="timestamp"/>
            <column name="deleted_by" type="varchar(255)"/>
        </createTable>

        <addForeignKeyConstraint baseTableName="ref_hs_code"
                                 baseColumnNames="parent_id"
                                 baseTableSchemaName="referential"
                                 constraintName="fk_hs_code_parent"
                                 referencedTableName="ref_hs_code"
                                 referencedColumnNames="id"
                                 referencedTableSchemaName="referential"/>

        <createIndex tableName="ref_hs_code" indexName="idx_hs_code" schemaName="referential">
            <column name="code"/>
        </createIndex>

        <createIndex tableName="ref_hs_code" indexName="idx_hs_chapter" schemaName="referential">
            <column name="chapter"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>
